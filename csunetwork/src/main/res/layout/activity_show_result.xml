<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.network.ShowResultActivity">

    <ProgressBar
        android:id="@+id/logout_waiting_probar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:visibility="gone" />

    <ListView
        android:id="@+id/lv_login_success"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logout_waiting_probar"
        android:layout_marginTop="30dp"
        android:background="@android:color/white"
        android:cacheColorHint="#00000000"
        android:choiceMode="singleChoice"
        android:divider="@android:color/holo_red_dark"
        android:dividerHeight="1dp"
        android:drawSelectorOnTop="false"
        android:minWidth="18dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lv_login_success"
        android:layout_centerHorizontal="true"
        android:padding="15dp"
        android:paddingTop="20dp">

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="下线"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:onClick="onLogoutBtnClicked"
            />

        <TextView
            android:id="@+id/tv_about_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_logout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="关于"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:onClick="onAboutClicked"
            />
    </RelativeLayout>

</RelativeLayout>