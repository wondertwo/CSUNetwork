<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_app_background"
    android:paddingLeft="24dp"
    android:paddingRight="24dp">

    <!--进度条-->
    <ProgressBar
        android:id="@+id/login_loading_probar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:visibility="invisible"
        android:layout_marginTop="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:orientation="vertical">

        <!--用户账号-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal" >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/img_user_number" />
                <EditText
                    android:id="@+id/user_number"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:paddingTop="8dp"
                    android:inputType="numberDecimal"
                    android:gravity="center_horizontal"
                    android:background="@android:color/transparent"
                    android:hint="请输入账号" />
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@android:color/holo_red_dark" />
        </LinearLayout>

        <!--用户密码-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/img_user_password" />
                <EditText
                    android:id="@+id/user_password"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:paddingTop="8dp"
                    android:inputType="textPassword"
                    android:gravity="center_horizontal"
                    android:background="@android:color/transparent"
                    android:hint="请输入密码" />
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@android:color/holo_red_dark" />
        </LinearLayout>
    </LinearLayout>

    <!--登录按钮-->
    <Button
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/button_color_selector"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:text="登陆"
        android:textSize="22sp"
        android:onClick="onLoginButtonClicked" />

    <!--已在线？尝试下线-->
    <Button
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/button_color_selector"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:text="@string/online_try_logout"
        android:textSize="22sp"
        android:onClick="onOnlineLogoutClicked" />

</LinearLayout>