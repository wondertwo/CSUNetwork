<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="60dp"
    android:background="@color/color_title_bar_background">

    <ImageButton
        android:id="@+id/titlebar_normal_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_titlebar_normal_left"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:paddingLeft="5dp" />

    <TextView
        android:id="@+id/titlebar_normal_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="titlebar_normal_text"
        android:visibility="gone"
        android:textColor="@color/color_title_bar_text"
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/titlebar_normal_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_titlebar_normal_right"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:paddingRight="5dp" />

</RelativeLayout>