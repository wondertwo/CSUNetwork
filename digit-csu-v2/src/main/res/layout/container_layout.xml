<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:skin="http://schemas.android.com/android/skin"
    android:id="@+id/container_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_activity_bg"
    android:orientation="vertical"
    skin:enable="true">

    <!--title bar-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/color_title_bar_bg"
        skin:enable="true">
        <ImageButton
            android:id="@+id/login_prepare_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ib_normal_titlebar_left"
            android:background="@android:color/transparent"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            skin:enable="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="login wifi"
            android:textColor="@color/color_title_bar_text"
            android:textSize="20sp"
            skin:enable="true" />
        <ImageButton
            android:id="@+id/login_prepare_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ib_normal_titlebar_right"
            android:background="@android:color/transparent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            skin:enable="true" />
    </RelativeLayout>

    <!--进度条-->
    <ProgressBar
        android:id="@+id/login_loading_probar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingTop="20dp"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <!--用户账号-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/img_user_number" />

                <EditText
                    android:id="@+id/user_number"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:gravity="center_horizontal"
                    android:hint="请输入账号"
                    android:inputType="numberDecimal"
                    android:paddingTop="8dp"
                    skin:enable="true" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@color/color_divider"
                skin:enable="true" />
        </LinearLayout>

        <!--用户密码-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/img_user_password"
                    skin:enable="true" />

                <EditText
                    android:id="@+id/user_password"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:gravity="center_horizontal"
                    android:hint="请输入密码"
                    android:inputType="textPassword"
                    android:paddingTop="8dp" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@color/color_divider"
                skin:enable="true" />
        </LinearLayout>
    </LinearLayout>

    <!--登录按钮-->
    <Button
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_color_selector"
        android:onClick="onLoginButtonClicked"
        android:text="登陆"
        android:textColor="@color/color_btn_text"
        android:textSize="22sp"
        skin:enable="true" />

    <!--已在线？尝试下线-->
    <Button
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_color_selector"
        android:onClick="onOnlineLogoutClicked"
        android:text="@string/online_try_logout"
        android:textColor="@color/color_btn_text"
        android:textSize="22sp"
        skin:enable="true" />

    <!--Be used to contain Snack bar-->
    <!--<android.support.design.widget.CoordinatorLayout
        android:id="@+id/coordinator_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">
    </android.support.design.widget.CoordinatorLayout>-->

</LinearLayout>