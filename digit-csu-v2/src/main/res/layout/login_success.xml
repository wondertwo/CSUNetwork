<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:skin="http://schemas.android.com/android/skin"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="me.wondertwo.csu.ui.wifi.LoginSuccess"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_activity_bg"
    android:orientation="vertical"
    skin:enable="true">

    <!--title bar-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/color_title_bar_bg"
        skin:enable="true">
        <ImageButton
            android:id="@+id/login_success_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ib_single_titlebar_left"
            android:background="@android:color/transparent"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            skin:enable="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="login success"
            android:textColor="@color/color_title_bar_text"
            android:textSize="20sp"
            skin:enable="true" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ib_single_titlebar_right"
            android:background="@android:color/transparent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            skin:enable="true" />
    </RelativeLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:onClick="onAppAboutIconClicked"
        android:src="@drawable/img_learn_more_info"
        skin:enable="true" />

    <ProgressBar
        android:id="@+id/logout_waiting_probar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:visibility="invisible" />

    <ListView
        android:id="@+id/lv_login_success"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="20dp"
        android:background="@color/color_list_view_bg"
        android:divider="@color/color_divider"
        android:dividerHeight="1dp"
        android:drawSelectorOnTop="false"
        android:minHeight="30dp"
        android:minWidth="18dp"
        skin:enable="true" />

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_gravity="center"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_color_selector"
        android:onClick="onLogoutButtonClicked"
        android:text="下线"
        android:textColor="@color/color_btn_text"
        android:textSize="22sp"
        skin:enable="true" />

</LinearLayout>